%tr{data: {client_id: client.id}, "href" => "/clients/#{client.id}"}
  - column_style = "height: 45px;"
  %td{style: column_style}
    = image_tag("#{client.id}.jpg", style: "max-height: 100%; height: 36px; width: 36px; border-radius: 30px; opacity: 1;")
    = client.full_name
  %td{style: column_style + "font-weight:bold; color: " + if client.stage == "Sold" then "green; "elsif client.stage == "Presenting" then "blue;" elsif client.stage == "Negotiating" then "orange;" end}= client.stage
  %td{style: column_style + " background-color:lightgrey;"}= client.money
  %td{style: column_style}= client.dealmaster_rating
  %td{style: column_style}= client.salary
  %td{style: column_style}= client.building
  %td{style: column_style}= client.key
  %td{style: column_style}= client.savings
  %td{style: column_style}= client.calendar
